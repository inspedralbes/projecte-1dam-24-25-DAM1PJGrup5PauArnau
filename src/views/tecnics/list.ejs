<%- include('../partials/header', { title: 'Catàleg de Tècnics' }) %>

<h1>Llista de Tècnics</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
      <th>Especialitat</th>
      <th>Accions</th>
    </tr>
  </thead>
  <tbody>
    <% tecnics.forEach(tecnic => { %>
      <tr>
        <td><%= tecnic.id %></td>
        <td><%= tecnic.nom %></td>
        <td><%= tecnic.especialitat %></td>
        <td>
          <form action="/tecnics/<%= tecnic.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Esborrar</button>
          </form>
          <a href="/tecnics/<%= tecnic.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>