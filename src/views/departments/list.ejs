<%- include('../partials/header', { title: 'Llista de departaments' }) %>

<h1>Llista de Departaments</h1>
<a class="btn btn-primary mb-3" href="/departments/new">Afegir departament</a>
<ul class="list-group">
  <% departments.forEach(dep_actual => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>
        <strong><%= dep_actual.name %></strong> 
      </span>
      <span>
        <a href="/departments/<%= dep_actual.id %>/edit" class="btn btn-warning">Editar</a>
        <a href="/departments/<%= dep_actual.id %>/delete" class="btn btn-danger">Eliminar</a>
      </span>
    </li>
  <% }) %>
</ul>

<%- include('../partials/footer') %>
) %>