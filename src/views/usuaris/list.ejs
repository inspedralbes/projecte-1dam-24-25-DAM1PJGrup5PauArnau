<%- include('../partials/header', { title: 'Llista d\'Usuaris' }) %>

<h1>Llista d'Usuaris</h1>
<a class="btn btn-primary mb-3" href="/usuaris/new">Afegir Usuari</a>

<ul class="list-group">
  <% usuaris.forEach(u => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>
        <strong><%= u.nom %> <%= u.cognoms %></strong><br>
        <small>Email: <%= u.email %></small><br>
        <small>Rol: <%= u.rol %></small>
      </span>
      <span>
        <a href="/usuaris/<%= u.id %>/edit" class="btn btn-warning">Editar</a>
        <a href="/usuaris/<%= u.id %>/delete" class="btn btn-danger">Eliminar</a>
      </span>
    </li>
  <% }) %>
</ul>

<%- include('../partials/footer') %>
