<%- include('../partials/header', { title: 'Llista de Departaments' }) %>

<h1>Llista de Departaments</h1>
<a class="btn btn-primary mb-3" href="/departaments/new">Afegir Incid√®ncia</a>

<ul class="list-group">
  <% departaments.forEach(dep => { %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span><strong>Nom:</strong> <%= dep.nom %></span>
      <span>
        <form action="/departaments/<%= dep.id %>/delete" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger btn-sm">Esborrar</button>
        </form>
        <a href="/departaments/<%= dep.id %>/edit" class="btn btn-warning btn-sm">Editar</a>
      </span>
    </li>
  <% }) %>
</ul>

<%- include('../partials/footer') %>
