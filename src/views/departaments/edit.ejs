<%- include('../partials/header', { title: 'Editar Departament' }) %>

<h1>Editar Departament</h1>

<form action="/departaments/<%= departament.id %>/update" method="POST">
  <div class="mb-3">
    <label for="nom" class="form-label">Nom del Departament</label>
    <input type="text" id="nom" name="nom" class="form-control" value="<%= departament.nom %>" required>
  </div>
  <button type="submit" class="btn btn-primary">Guardar</button>
</form>

