<% if (incidencies && incidencies.length > 0) { %>
  <ul class="list-group">
    <% incidencies.forEach(incidencia => { %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <form action="/incidencies/<%= incidencia.id %>/update" method="POST">
          <div>
            <small><strong>Descripció:</strong> <%= incidencia.description %></small><br>
            <small><strong>Departament:</strong> <%= incidencia.Department ? incidencia.Department.nom : 'Desconegut' %></small><br>
            <small><strong>Prioritat:</strong></small>
            <select name="prioritat" class="form-select form-select-sm">
              <option value="Baixa" <%= incidencia.priority === 'Baixa' ? 'selected' : '' %>>Baixa</option>
              <option value="Mitjana" <%= incidencia.priority === 'Mitjana' ? 'selected' : '' %>>Mitjana</option>
              <option value="Alta" <%= incidencia.priority === 'Alta' ? 'selected' : '' %>>Alta</option>
            </select>
            <br>
            <small><strong>Tècnic:</strong></small>
            <select name="tecnicId" class="form-select form-select-sm">
              <% tecnics.forEach(tecnic => { %>
                <option value="<%= tecnic.id %>" <%= tecnic.id === incidencia.TecnicId ? 'selected' : '' %>><%= tecnic.nom %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <button type="submit" class="btn btn-sm btn-primary">Guardar</button>
          </div>
        </form>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p class="text-muted">No hi ha incidències disponibles.</p>
<% } %>