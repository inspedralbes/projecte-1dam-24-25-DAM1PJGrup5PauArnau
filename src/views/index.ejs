<%- include('partials/header', { title: 'Projecte Incidències' }) %>

<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Catàleg d'Incidències</h1>
    <p class="lead">Explora les incidències reportades pels diferents departaments.</p>
  </div>
</div>

<div class="container">
  <!-- Filters -->
  <div id="filters" class="row mb-4">
    <div class="col-md-6">
      <div class="input-group">
        <input type="text" id="searchInput" class="form-control" placeholder="Cerca per descripció, departament...">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
      </div>
    </div>
    
    <div class="col-md-6">
      <select id="departmentFilter" class="form-select">
        <option value="all">Tots els departaments</option>
        <% 
        // Crear un array per emmagatzemar departaments únics
        const departments = [];
        incidents.forEach(incident => {
          if (incident.Department && !departments.some(dep => dep.id === incident.Department.id)) {
            departments.push(incident.Department);
          }
        });
        
        // Mostrar les opcions per cada departament únic
        departments.forEach(department => { 
        %>
          <option value="<%= department.id %>"><%= department.name %></option>
        <% }); %>
      </select>
    </div>
  </div>

  <!-- Incident Cards -->
  <div class="row">
    <% incidents.forEach(incident => { %>
      <div class="col-md-4 mb-4 incident-card-container" data-department="<%= incident.departmentId %>">
        <div class="card incident-card h-100" data-incident-id="<%= incident.id %>">
          <% if (incident.Department) { %>
            <span class="badge bg-danger department-badge"><%= incident.Department.name %></span>
          <% } %>
          
          <div class="card-body">
            <h5 class="card-title">
              <%= incident.description %>
            </h5>
            <p class="card-text">
              <strong>Prioritat:</strong> <%= incident.priority %><br>
              <strong>Data de creació:</strong> <%= incident.creationDate %>
            </p>
          </div>
          <div class="card-footer">
            <a href="/incidents/<%= incident.id %>/edit" class="btn btn-sm btn-outline-primary">Editar</a>
            <button class="btn btn-sm btn-outline-danger float-end">Detalls</button>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<!-- Afegir JavaScript per interactivitat -->
<script src="/static/js/main.js"></script>

<%- include('partials/footer') %>
