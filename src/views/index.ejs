<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestor Incidències</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>
<body>
  <%- include('partials/header', { title: 'Catàleg d\'Incidències' }) %>

  <div class="jumbotron">
    <div class="container">
      <h1 class="display-4">Catàleg d'Incidències</h1>
      <p class="lead">Explora les incidències reportades pels diferents departaments.</p>
    </div>
  </div>

  <div class="container">
    <!-- Filters -->
    <div id="filters" class="row mb-4">
      <div class="col-md-6">
        <div class="input-group">
          <input type="text" id="searchInput" class="form-control" placeholder="Cerca per descripció, departament...">
          <span class="input-group-text"><i class="bi bi-search"></i></span>
        </div>
      </div>
      
      <div class="col-md-6">
        <select id="departmentFilter" class="form-select">
          <option value="all">Tots els departaments</option>
          <% departaments.forEach(dep => { %>
            <option value="<%= dep.id %>"><%= dep.nom %></option>
          <% }) %>
        </select>
      </div>
    </div>

    <!-- Incident Cards -->
    <div class="row">
      <% if (incidencies && incidencies.length > 0) { %>
        <% incidencies.forEach(inc => { %>
          <div class="col-md-4 mb-4 incident-card-container" data-department="<%= inc.departmentId %>">
            <div class="card incident-card h-100" data-incident-id="<%= inc.id %>">
              <span class="badge bg-danger department-badge">
                <%= inc.Departament ? inc.Departament.nom : 'Sense departament' %>
              </span>
              <div class="card-body">
                <h5 class="card-title"><%= inc.descripcio %></h5>
                <p class="card-text">
                  <strong>Prioritat:</strong> <small><%= inc.prioritat %></small><br>
                  <strong>Data de creació:</strong> <small><%= inc.dataCreacio %></small>
                </p>
              </div>
              <div class="card-footer">
                <button class="btn btn-sm btn-outline-danger float-end">Detalls</button>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-muted">No hi ha incidències disponibles.</p>
      <% } %>
    </div>
  </div>

  <%- include('partials/footer') %>

  <!-- Afegir JavaScript per interactivitat -->
  <script src="/static/js/main.js"></script>
  <script>
    document.getElementById('departmentFilter').addEventListener('change', function () {
      const selectedDepartment = this.value;
      const cards = document.querySelectorAll('.incident-card-container');

      cards.forEach(card => {
        if (selectedDepartment === 'all' || card.dataset.department === selectedDepartment) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>